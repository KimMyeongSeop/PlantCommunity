<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton9"
        android:src="@drawable/last_button"
        android:backgroundTint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton10"
        android:src="@drawable/next_button"
        android:adjustViewBounds="false"
        android:backgroundTint="#ffffff"
        android:layout_gravity="right"
        android:layout_marginLeft="620dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resister Module"
        android:id="@+id/maintext"
        android:textSize="33dp"
        android:textColor="#FF2ECB71"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/line"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/maintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="고유번호로 모듈을 등록하세요"
        android:id="@+id/textView11"
        android:textSize="18dp"
        android:textColor="#62c7ae"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="존재하지 않는 고유번호는 추가되지 않습니다. 정확한 모듈 주소를 입력해주세요."
        android:id="@+id/textView12"
        android:textSize="15dp"
        android:textColor="#7e7e7f"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="102dp"
        android:layout_height="60dp"
        android:text="모델등록"
        android:id="@+id/btn_resist"
        android:backgroundTint="#2ecb71"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modelnum"
        android:hint="모델 고유번호를 입력하세요"
        android:layout_marginTop="60dp"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:layout_below="@+id/imageView8"
        android:layout_alignEnd="@+id/maintext" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView9"
        android:src="@drawable/serch"
        android:tint="#a5a5a5"
        android:layout_alignTop="@+id/modelnum"
        android:layout_toStartOf="@+id/modelnum" />

</RelativeLayout>