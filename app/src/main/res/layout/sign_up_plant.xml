<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/next_button"
        android:adjustViewBounds="false"
        android:backgroundTint="#ffffff"
        android:layout_gravity="right"
        android:layout_marginLeft="620dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Plant"
        android:id="@+id/textView5"
        android:autoText="false"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textColor="#FF2ECB71"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:id="@+id/imageView5"
        android:src="@drawable/unnamed"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginBottom="270dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_marginBottom="197dp"
        android:hint="Google 검색"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="102dp"
        android:layout_height="60dp"
        android:text="Search"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/editText4"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_alignBottom="@+id/editText4" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/editText4"
        android:id="@+id/tableRow">

        <Button
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/button9"
            android:layout_alignTop="@+id/editText4"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_alignBottom="@+id/editText4" />

        <Button
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button7"
            android:layout_alignTop="@+id/editText4"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_alignBottom="@+id/editText4" />
    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="물주는 주기 : "
        android:id="@+id/textView6"
        android:textSize="23dp"
        android:layout_alignBottom="@+id/tableRow"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="일수"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tableRow"
        android:id="@+id/linearLayout7"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginRight="10dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_weight="1"
        />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/tableRow"
        android:layout_toEndOf="@+id/textView7" >

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_weight="1"
          />
    </LinearLayout>

</RelativeLayout>