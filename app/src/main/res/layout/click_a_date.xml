<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="500dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView25"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textColor="#4abdc9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="input"
        android:id="@+id/textView26"
        android:layout_marginTop="43dp"
        android:textColor="#4abdc9"
        android:layout_below="@+id/textView25"
        android:layout_alignStart="@+id/textView25" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_marginTop="49dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:inputType="textMultiLine"
        android:lines="4"
        android:minLines="2"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:hint="Input Text Here" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/line"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="CANCLE"
        android:id="@+id/button10"
        android:background="#f9f9f9"
        android:onClick="OnButtonClick"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/button11"
        android:layout_toStartOf="@+id/button11"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="100dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="SUBMIT"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText6"
        android:layout_marginBottom="27dp"
        android:background="#f9f9f9"
        android:onClick="OnButtonClick" />

</RelativeLayout>