<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/last_button"
        android:backgroundTint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/next_button"
        android:adjustViewBounds="false"
        android:backgroundTint="#ffffff"
        android:layout_gravity="right"
        android:layout_marginLeft="620dp"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I am"
        android:id="@+id/textView8"
        android:autoText="false"
        android:textSize="38dp"
        android:textColor="#FF2ECB71"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageButton5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/empty_user"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="102dp"
        android:layout_height="60dp"
        android:text="사진등록"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"
        android:backgroundTint="#2ecb71"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/button6"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/editText5"
        android:layout_toEndOf="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="이름을 입력해주세요"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button5"
        android:layout_toEndOf="@+id/imageButton4" />

</RelativeLayout>